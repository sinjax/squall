<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>squall-tools</artifactId>
		<groupId>org.openimaj</groupId>
		<version>1.0.0-SNAPSHOT</version>
		<relativePath>../</relativePath>
	</parent>
	<groupId>org.openimaj</groupId>
	<artifactId>ReteStormTool</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>jar</packaging>
	<name>ReteStormTool</name>
	<description>Tool for various Squall functionality topologies</description>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<dependencies>
		<dependency>
	      <groupId>org.openimaj.storm.tools</groupId>
	      <artifactId>core-storm-tool</artifactId>
	      <version>1.0.6-SNAPSHOT</version>
	      <scope>compile</scope>
	    </dependency>
		<dependency>
			<groupId>org.openimaj</groupId>
			<artifactId>twitter</artifactId>
			<version>1.0.6-SNAPSHOT</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>spy</groupId>
			<artifactId>spymemcached</artifactId>
			<version>2.8.1</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.twitter4j</groupId>
			<artifactId>twitter4j-core</artifactId>
			<version>[2.2,)</version>
		</dependency>
		<dependency>
			<groupId>org.twitter4j</groupId>
			<artifactId>twitter4j-stream</artifactId>
			<version>[2.2,)</version>
		</dependency>
		<dependency>
			<groupId>org.openimaj.tools</groupId>
			<artifactId>core-tool</artifactId>
			<version>1.0.6-SNAPSHOT</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<artifactId>ReteStorm</artifactId>
			<groupId>org.openimaj.rdf.storm</groupId>
			<version>1.0.6-SNAPSHOT</version>
			<scope>compile</scope>
			<exclusions>
				<exclusion>
					<groupId>commons-io</groupId>
					<artifactId>commons-io</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>storm</groupId>
			<artifactId>storm</artifactId>
			<!-- <version>0.7.2</version>-->
			<version>0.8.0</version>
			<!-- keep storm out of the jar-with-dependencies -->
			<!-- <scope>provided</scope> -->
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.8.2</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
	<profiles>
		<profile>
			<id>minijar</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-shade-plugin</artifactId>
						<version>2.0</version>
						<executions>
							<execution>
								<configuration>
									<finalName>ReteStormTool-mini</finalName>
									<artifactSet>
										<excludes>
											<exclude>classworlds:classworlds</exclude>
											<exclude>junit:junit</exclude>
											<exclude>jmock:*</exclude>
											<exclude>*:xml-apis</exclude>
											<exclude>org.apache.maven:lib:tests</exclude>
											<exclude>org.apache.*:*</exclude>
											<exclude>org.openimaj:nlp:*</exclude>
											<exclude>org.openimaj:core-image:*</exclude>
											<exclude>org.openimaj:core-feature:*</exclude>
											<exclude>org.openimaj:test*:*</exclude>
											<exclude>log4j:log4j:jar:</exclude>
											<exclude>net.sf.jasperreports:*</exclude>
											<exclude>eclipse:*</exclude>
										</excludes>
									</artifactSet>
									<filters>
										<filter>
											<artifact>*:*</artifact>
											<excludes>
												<exclude>META-INF/*.SF</exclude>
												<exclude>META-INF/*.DSA</exclude>
												<exclude>META-INF/*.RSA</exclude>
											</excludes>
										</filter>
									</filters>
									<transformers>
										<transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
											<manifestEntries>
												<Main-Class>org.openimaj.rdf.storm.tool.ReteStorm</Main-Class>
											</manifestEntries>
										</transformer>
										<transformer implementation="org.apache.maven.plugins.shade.resource.DontIncludeResourceTransformer">
											<resource>.bin</resource>
										</transformer>
									</transformers>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.2.1</version>
				<configuration>
					<finalName>ReteStormTool</finalName>
					<appendAssemblyId>false</appendAssemblyId>
					<descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
					</descriptorRefs>
					<archive>
						<manifest>
							<mainClass>org.openimaj.rdf.storm.tool.ReteStorm</mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>